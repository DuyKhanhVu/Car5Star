<!DOCTYPE html>
<html lang="en">

<head>
    <title>Car manager</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>

<body>
    <%include ../layoutadmin/header.ejs %>

    <div class="container">
        <div class="row" style="margin-bottom : 5px;">
            <div class="col-md-12">
                <a href="/admin/car-manager/add-car" class="btn btn-success pull-left">Add new car</a>
            </div>
        </div>
        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tên xe</th>
                                    <th>Hình ảnh</th>
                                    <th>Hãng</th>
                                    <th>Màu xe</th>
                                    <th>Số ghế</th>
                                    <th>Giá thuê</th>
                                    <th>Trạng thái</th>
                                    <th>Tuỳ chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <%for (var i = 0; i < data.cars.length; i++){%>
                                <tr>
                                    <td><%=data.cars[i].id%></td>
                                    <td><%=data.cars[i].name%></td>
                                    <td><img src="/static/<%=data.cars[i].imageUrl%>" style="height: 100px" /> </td>
                                    <td><%=data.cars[i].brand%></td>
                                    <td><%=data.cars[i].exterior_color%></td>
                                    <td><%=data.cars[i].seating%></td>
                                    <td><%=data.cars[i].price%></td>
                                    <td style="text-align: center">
                                        <%if (data.cars[i].status){%>
                                            <a class="btn btn-success">Ready</a>
                                        <%}else{%>
                                            <a class="btn btn-warning">Busy</a>
                                        <%}%>
                                    </td>
                                    <td style="text-align: center"> 
                                        <button class="btn glyphicon glyphicon-trash btn-danger car_delete"
                                                car_id = "<%=data.cars[i].id%>"></button>
                                        <a href="/admin/car-manager/update-car/<%=data.cars[i].id%>" 
                                            class="btn glyphicon glyphicon-pencil btn-primary"></a>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/static/js/carAdmin.js"></script>
</body>

</html>