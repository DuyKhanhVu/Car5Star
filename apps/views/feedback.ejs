<!doctype <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="static/css/bootstrap.min.css" rel="stylesheet">
    <link href="static/css/about.css" rel="stylesheet">

    <title>Feedback</title>
</head>

<body>
    <%include layout/header%>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="form-area">
                    <form id="feedbackform" role="form" method="POST" action="/feedback">
                        <br style="clear:both">
                        <h3 style="margin-bottom: 25px; text-align: center;">Phản hổi khách hàng</h3>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Tên" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="phone" placeholder="Số điện thoại" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" type="textarea" name="content" placeholder="Nội dung"
                                maxlength="140" rows="7"></textarea>
                        </div>

                        <input type="submit" value="Gửi" class="btn float-right">
                    </form>
                </div>
            </div>
            <div class="col-md-7">
                <img style="width: 100%;" src="/static/img/feedback-img.jpg" class="img-rounded" alt="Cinque Terre">
            </div>
        </div>
    </div>
    <% include layout/footer %>
    <script src="static/js/jquery-3.3.1.slim.min.js"></script>
    <script src="static/js/popper.min.js"></script>
    <script src="static/js/bootstrap.min.js"></script>
</body>

</html>